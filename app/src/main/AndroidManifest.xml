<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.github.syafiqq.reactivetest">

    <application
            android:name=".controller.App"
            android:allowBackup="true"
            android:icon="@mipmap/app_ic_launcher"
            android:label="@string/s_app_name"
            android:roundIcon="@mipmap/app_ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".controller.SplashScreen"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_splash_screen"
                android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".controller.page.MainDashboard"
                android:label="@string/title_activity_main_dashboard"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".controller.page.operators.OperatorsDashboard"
                android:label="@string/title_operators_activity_operators_dasboard"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".controller.page.operators.create.OpCreateCreate"
                android:label="@string/title_activity_op_create_create"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".controller.page.operators.create.OpCreateDefer"
                android:label="@string/title_activity_op_create_defer"
                android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
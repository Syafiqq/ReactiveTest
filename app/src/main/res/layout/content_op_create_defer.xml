<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_op_create_defer"
        tools:context="com.github.syafiqq.reactivetest.controller.page.operators.create.OpCreateDefer">

    <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_value_display"
            app:layout_constraintLeft_toLeftOf="parent"
            android:minWidth="50dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintTop_toTopOf="@+id/switch_transfer"
            app:layout_constraintRight_toLeftOf="@+id/switch_transfer"
            app:layout_constraintBottom_toBottomOf="@+id/switch_transfer" />

    <Button
            android:text="Shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_shift"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/switch_transfer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" />

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/list_view_defer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/list_view_create"
            app:layout_constraintBottom_toBottomOf="@+id/list_view_create"
            app:layout_constraintTop_toTopOf="@+id/list_view_create"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp" />

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/list_view_just"
            app:layout_constraintRight_toLeftOf="@+id/list_view_create"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp" />

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/list_view_create"
            app:layout_constraintRight_toLeftOf="@+id/list_view_defer"
            app:layout_constraintLeft_toRightOf="@+id/list_view_just"
            app:layout_constraintBottom_toBottomOf="@+id/list_view_just"
            app:layout_constraintTop_toTopOf="@+id/list_view_just"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="92dp"
            tools:layout_editor_absoluteY="92dp"
            tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline8"
            app:layout_constraintGuide_begin="150dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="150dp"
            tools:layout_editor_absoluteX="0dp" />

    <TextView
            android:text="Just"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintRight_toLeftOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp" />

    <TextView
            android:text="Create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintRight_toLeftOf="@+id/textView4"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginRight="4dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

    <TextView
            android:text="Defer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp" />

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_transfer"
            app:layout_constraintRight_toLeftOf="@+id/button_shift"
            app:layout_constraintLeft_toRightOf="@+id/text_view_value_display"
            app:layout_constraintBottom_toBottomOf="@+id/button_shift"
            app:layout_constraintTop_toTopOf="@+id/button_shift"
            app:layout_constraintVertical_bias="0.49"
            android:checked="true"
            tools:checked="true" />

</android.support.constraint.ConstraintLayout>

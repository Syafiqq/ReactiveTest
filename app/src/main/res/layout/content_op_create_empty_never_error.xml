<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_op_create_empty_never_error"
        tools:context="com.github.syafiqq.reactivetest.controller.page.operators.create.OpCreateEmptyNeverError">

    <TextView
            android:text="Empty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

    <TextView
            android:text="Never"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintRight_toLeftOf="@+id/textView5"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    <TextView
            android:text="Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" />

    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_empty"
            app:layout_constraintRight_toLeftOf="@+id/button_never"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_never"
            app:layout_constraintRight_toLeftOf="@+id/button_error"
            app:layout_constraintLeft_toRightOf="@+id/button_empty"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_empty"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_empty"
            app:layout_constraintVertical_bias="0.0" />

    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_error"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_never"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_never"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/button_never"
            app:layout_constraintVertical_bias="0.0" />

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/yellow_a200"
            android:id="@+id/view_empty"
            app:layout_constraintRight_toLeftOf="@+id/view_never"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/button_empty"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintVertical_bias="0.0" />

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/yellow_a200"
            android:id="@+id/view_never"
            app:layout_constraintRight_toLeftOf="@+id/view_error"
            app:layout_constraintLeft_toRightOf="@+id/view_empty"
            app:layout_constraintBottom_toBottomOf="@+id/view_empty"
            app:layout_constraintTop_toTopOf="@+id/view_empty"
            android:layout_marginLeft="16dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/yellow_a200"
            android:id="@+id/view_error"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/view_never"
            app:layout_constraintBottom_toBottomOf="@+id/view_never"
            app:layout_constraintTop_toTopOf="@+id/view_never"
            android:layout_marginLeft="16dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="32dp" />

</android.support.constraint.ConstraintLayout>
